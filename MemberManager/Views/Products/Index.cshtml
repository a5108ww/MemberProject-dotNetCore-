@using MemberManager.Models.DbModels;

@model List<Products>

    <script type="text/javascript">

        $(function () {

            var thisForm = $('#productForm');
            var productsTable = thisForm.find("table[name='productsTable']");

            //為每個編輯按鈕建立點擊事件
